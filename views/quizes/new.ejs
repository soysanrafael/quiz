<form method="post" action="/quizes/create" style=max-width:480px;min-width:150px">
<div class="item">
	<label for="preg">Pregunta:</label>
	<input id="preg" type="text" name="quiz[pregunta]" required="required" placeholder="<%= quiz.pregunta %>" />
</div>

<div class="item">
	<label for="resp">Respuesta:</label>
	<input id="resp" type="text" name="quiz[respuesta]" required="required" placeholder="<%= quiz.respuesta %>" />
</div>

<div class="buttons">
	<input type="submit" value="Crear"/>
	<a href="/quizes"><input type="button" name="Cancelar" value="Cancelar" >
</div>
